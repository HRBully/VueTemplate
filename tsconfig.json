{
  "compilerOptions": {
    "noImplicitAny": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "paths": {
      "@/*" : ["./src/*"]
    }
  },
  "include": [
    "index.d.ts",  
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/*.vue",
    "types/**/*.d.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}